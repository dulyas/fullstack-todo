          {
            "name": "user_id",
            "description": "user_id",
            "type": "number",
            "required": true,
            "in": "query"
          },
          {
            "name": "limit",
            "description": "limit users for pagination",
            "type": "number",
            "required": false,
            "in": "query"
          },
          {
            "name": "offset",
            "description": "offset for limit for pagination",
            "type": "number",
            "required": false,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Todos",
            "schema": {
              "$ref": "#/definitions/Todos"
            }
          }
        }
      }
    },
