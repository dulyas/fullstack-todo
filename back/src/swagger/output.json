        "parameters": [
          {
            "name": "user_id",
            "in": "body",
            "description": "user_id of creator",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          {
            "name": "done",
            "in": "body",
            "description": "new done status for todo",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        ],
        "responses": {
          "200": {
            "description": "new Todo",
